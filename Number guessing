                                if(p1==c):
                                    print("EXACT VALUE BY PLAYER 1(3 POINTS)")
                                    p1_points+=3
                                else:    
                                    print("PLAYER 1 GETS 1 POINT")
                                    p1_points+=1
        else:
            print("PLAYER 2 WON THE TOSS!!")
            for i in range(rounds):
                c=random.randint(1,100)
                print("Current player 1 points:",p1_points)
                print("Current player 2 points:",p2_points)
                print("Player 1 choses his number first:")
                p1=int(input("Player 1 input your number:"))
                print("PLAYER 1 CHOSE:",p1)
                print("Now player 2 choses his number")
                p2=int(input("Player 2 input your number"))
                print("PLAYER 2 CHOSE:",p2)
                print("THE NUMBER IS:",c)
                if(p1==p2):
                    print("DRAW")
                else:    
                    if (c>p1):
                        if(c>p2):
                            if ((c-p1)>(c-p2)):
                                if(p2==c):
                                    print("EXACT VALUE BY PLAYER 2(3 POINTS)")
                                    p2_points+=3
                                else:    
                                    print("PLAYER 2 GETS ONE POINT")
                                    p2_points+=1
                            else:
                                if(p1==c):
                                    print("EXACT VALUE BY PLAYER 1(3 POINTS)")
                                    p1_points+=3
                                else:    
                                    print("PLAYER 1 GETS 1 POINT")
                                    p1_points+=1
                        else:
                            if ((c-p1)>(p2-c)):
                                if(p2==c):
                                    print("EXACT VALUE BY PLAYER 2(3 POINTS)")
                                    p2_points+=3
                                else:    
                                    print("PLAYER 2 WINS GETS 1 POINT ")
                                    p2_points+=1
                            else:
                                if(p1==c):
                                    print("EXACT VALUE BY PLAYER 1(3 POINTS)")
                                    p1_points+=3
                                else:    
                                    print("PLAYER 1 GETS 1 POINT")
                                    p1_points+=1
