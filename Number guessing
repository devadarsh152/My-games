                                if(p1==c):
                                    print("EXACT VALUE BY PLAYER 1 GETS ")
                                    p1_points+=3
                                else:    
                                    print("PLAYER 1 GETS 1 POINT")
                                    p1_points+=1
                        else:
                            if((p1-c)>(p2-c)):
                                print("PLAYER 2 GETS 1 POINT")
                                p2_points+=1
